<header
  class="fixed inset-x-0 top-0 z-10 flex h-16 items-center justify-between px-6 sm:h-20 sm:px-8 bg-white bg-opacity-95 backdrop-blur-sm transition-transform duration-500"
  id="header"
>
  <!-- ロゴ -->
  <a
    href="/"
    class="flex items-center transition-opacity duration-[0.4s] hover:opacity-70"
  >
    <p class="font-english text-xl sm:text-2xl font-bold text-main">
      JOYZO
    </p>
  </a>
  
  <!-- ナビゲーション -->
  <nav class="hidden md:block">
    <ul class="flex items-center space-x-8">
      <li>
        <a href="#about-section" class="flex flex-col items-center text-sm hover:text-main transition-colors">
          <span class="font-english text-lg">ABOUT</span>
          <span class="mt-1 text-xs">会社概要</span>
        </a>
      </li>
      <li>
        <a href="#company-section" class="flex flex-col items-center text-sm hover:text-main transition-colors">
          <span class="font-english text-lg">COMPANY</span>
          <span class="mt-1 text-xs">会社情報</span>
        </a>
      </li>
      <li>
        <a href="#careers-section" class="flex flex-col items-center text-sm hover:text-main transition-colors">
          <span class="font-english text-lg">CAREERS</span>
          <span class="mt-1 text-xs">採用情報</span>
        </a>
      </li>
      <li>
        <a href="#contact-section" class="flex flex-col items-center text-sm hover:text-main transition-colors">
          <span class="font-english text-lg">CONTACT</span>
          <span class="mt-1 text-xs">お問い合わせ</span>
        </a>
      </li>
    </ul>
  </nav>
  
  <!-- モバイルメニューボタン -->
  <button
    class="md:hidden w-8 h-8 flex flex-col justify-center items-center space-y-1"
    id="mobile-menu-button"
  >
    <span class="w-6 h-0.5 bg-main"></span>
    <span class="w-6 h-0.5 bg-main"></span>
    <span class="w-6 h-0.5 bg-main"></span>
  </button>
</header>
