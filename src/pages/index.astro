---
import Layout from "@layouts/Layout.astro";
import CorporateHeroSection from "@components/CorporateHeroSection.svelte";
import AnniversarySection from "@components/AnniversarySection.svelte";
import VisionSection from "@components/VisionSection.svelte";
import ProfessionalismSection from "@components/ProfessionalismSection.svelte";
import RecruitBanner from "@components/RecruitBanner.svelte";
import ContactSection from "@components/ContactSection.svelte";
import StoryMediaSection from "@components/StoryMediaSection.svelte";
import { getLatestNews } from "@libs/microcms";

// microCMSから最新のニュース記事を取得
const news = await getLatestNews();
---

<Layout>
  <!-- 1. コーポレートヒーローセクション -->
  <CorporateHeroSection client:load />
  
  <!-- 2. 15周年記念PRセクション -->
  <AnniversarySection client:load />
  
  <!-- 3. 会社ビジョンセクション -->
  <VisionSection client:load />
  
  <!-- 4. プロフェッショナリズムキューブセクション -->
  <ProfessionalismSection client:load />
  
  
  <!-- 6. 採用バナー -->
  <RecruitBanner client:load />
  
  <!-- 7. ストーリー・メディアセクション -->
  <StoryMediaSection client:load blogs={news} />
  
  <!-- 8. お問い合わせセクション -->
  <ContactSection client:load />
</Layout>
