---
import Layout from "@layouts/Layout.astro";
import HeroAnimation from "@components/HeroAnimation.svelte";
import ScrollStorySection from "@components/ScrollStorySection.svelte";
import CoreCopySection from "@components/CoreCopySection.svelte";
import ContactSection from "@components/ContactSection.svelte";
import { messages } from "../data/messages";
---

<Layout>
  <!-- Hero Section -->
  <HeroAnimation client:load />
  
  <!-- Story Sections (4つのメッセージセクション) -->
  {messages.slice(0, 4).map((message, index) => (
    <ScrollStorySection 
      client:only="svelte" 
      message={message} 
      index={index} 
    />
  ))}
  
  <!-- Core Copy Section (ENJOY YOUR WORLD.) -->
  <CoreCopySection client:only="svelte" />
  
  <!-- Contact Section -->
  <ContactSection />
</Layout>
