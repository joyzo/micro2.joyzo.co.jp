---
import Layout from "@layouts/Layout.astro";
import CorporateHeroSection from "@components/CorporateHeroSection.svelte";
import VisionSection from "@components/VisionSection.svelte";
import ManifestoSection from "@components/ManifestoSection.svelte";
import PartnersSection from "@components/PartnersSection.svelte";
import RecruitSection from "@components/RecruitSection.svelte";
import StoryMediaSection from "@components/StoryMediaSection.svelte";
import ContactSection from "@components/ContactSection.svelte";
---

<Layout>
  <!-- 1. コーポレートヒーローセクション -->
  <CorporateHeroSection client:load />
  
  <!-- 2. 会社ビジョンセクション -->
  <VisionSection client:load />
  
  <!-- 3. マニフェスト一覧セクション -->
  <ManifestoSection client:load />
  
  <!-- 4. 実績・パートナーセクション -->
  <PartnersSection client:load />
  
  <!-- 5. 採用セクション -->
  <RecruitSection client:load />
  
  <!-- 6. ストーリー・メディアセクション -->
  <StoryMediaSection client:load />
  
  <!-- 7. お問い合わせセクション -->
  <ContactSection client:load />
</Layout>
